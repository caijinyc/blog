<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('_include/head.ejs', { title: 'ARCHIVE' }) -%>
</head>
<body>
  <%- include('_include/header.ejs', { title: 'WEEKLY' }) -%>
  <main class="main-tags">
    <div class="posts-list">
      <h1 class="title">
        ALL WEEKLY
      </h1>
      <% if ((site.pages.filter(item => item.source.includes('weekly/posts'))).length > 0) { %>
        <div class="archive-posts">
          <% site.pages.filter(item => item.source.includes('weekly/posts')).sort('date', -1).each(function(post) { %>
            <div class="archive-post-item">
              <div class="post-title">
                <a href="<%= config.root + post.path %>">
                  <%= post.title %>
                  <% if (post.date) { %>
                    <time datetime="<%= post.date.toJSON() %>">
                        <%= date(post.date) %>
                    </time>
                  <% } %>
                </a>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </main>
  <%- partial('_include/footer.ejs', {}, { cache: true }) %>
</body>
</html>